<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.spaceyquiz.GotActivity"
    >
    <!-- Background layout -->
    <FrameLayout
        style="@style/backgroundStyle"
        >
        <ImageView
            style="@style/imageBackgroundStyle"
            android:src="@drawable/got1"
            android:id="@+id/changeable_image1"
            />
    </FrameLayout>
    <!-- Content ScrollView -->
    <ScrollView
        style="@style/backgroundStyle"
        >
        <!-- Content container -->
        <LinearLayout
           style="@style/containerStyle"
            >
            <!-- Background change and hint icons layout -->
            <RelativeLayout
                style="@style/iconsContainer">
                <ImageView
                    style="@style/iconsStyle"
                    android:id="@+id/change_image1"
                    android:src="@drawable/layers"
                    />
                <ImageView
                    style="@style/iconsStyle"
                    android:src="@drawable/idea"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/show_hint1"
                    />
            </RelativeLayout>
            <!-- Question Layout -->
            <TextView
                style="@style/questionsLayout"
                android:fontFamily="@font/game_of_thrones"
                android:text="@string/question_one"
                android:textAlignment="center"
                android:id="@+id/question_text_view1"
                />
            <!-- Finished quiz screen layout -->
            <LinearLayout
                style="@style/finishScreenLayout"
                android:id="@+id/finished_quiz1"
                >
                <!-- Correct answers layout -->
                <LinearLayout
                    style="@style/correctAnswersLayout">
                    <TextView
                        style="@style/correctAnswersText"
                        android:fontFamily="@font/roboto_thin"
                        />
                    <TextView
                        style="@style/correctAnswersNumber"
                        android:textAlignment="center"
                        android:id="@+id/final_correct_answers1"
                        android:fontFamily="@font/roboto_thin"
                        />
                    <ImageView
                        style="@style/correctAnswersImage"
                        />
                </LinearLayout>
                <!-- Wrong answers layout -->
                <LinearLayout
                    style="@style/wrongAnswersLayout"
                    >
                    <TextView
                        style="@style/wrongAnswersText"
                        android:fontFamily="@font/roboto_thin"/>
                    <TextView
                        style="@style/wrongAnswersNumber"
                        android:textAlignment="center"
                        android:id="@+id/final_wrong_answers1"
                        android:fontFamily="@font/roboto_thin"
                        />
                    <ImageView
                        style="@style/wrongAnswersImage"
                        />
                </LinearLayout>
                <!-- Time elapsed layout -->
                <LinearLayout
                    style="@style/timeElapsedLayout"
                    >
                    <TextView
                        style="@style/timeElapsedText"
                        android:fontFamily="@font/roboto_thin"
                        />
                    <TextView
                        style="@style/timeElapsedNumber"
                        android:textAlignment="center"
                        android:id="@+id/final_time_elapsed1"
                        android:fontFamily="@font/roboto_thin"
                        />
                    <ImageView
                        style="@style/timeElapsedImage"
                        />
                </LinearLayout>
            </LinearLayout>
            <!-- Answer options layout -->
            <RadioGroup
                style="@style/radioButtonContainer"
                >
                <android.support.v7.widget.AppCompatRadioButton
                    style="@style/radioButtonStyle"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/trick_answer1_1"
                    android:id="@+id/answer11"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    style="@style/radioButtonStyle"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/trick_answer2_1"
                    android:id="@+id/answer21"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    style="@style/radioButtonStyle"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/correct_answer3_1"
                    android:id="@+id/answer31"
                    />
                <android.support.v7.widget.AppCompatRadioButton
                    style="@style/radioButtonStyle"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/trick_answer4_1"
                    android:id="@+id/answer41"
                    />
            </RadioGroup>
            <!-- Current question number layout -->
            <LinearLayout
                style="@style/currentQuestionLayout"
                android:id="@+id/question_number_layout1"
                >
                <TextView
                    style="@style/currentQuestionText"
                    android:textAlignment="center"
                    android:id="@+id/current_question1"
                    android:fontFamily="@font/roboto_thin"
                    />
            </LinearLayout>
            <!-- Divider layout -->
            <LinearLayout
                style="@style/dividerStyle"
                android:id="@+id/divider1"
                >
            </LinearLayout>
            <!-- Submit button layout -->
            <Button
                style="@style/submitButtonStyle"
                android:id="@+id/submit_button1"
                android:background="@drawable/circle_got"
                android:fontFamily="@font/game_of_thrones"
                />
            <!-- Divider layout -->
            <LinearLayout
                style="@style/dividerStyle"
                android:id="@+id/divider2"
                >
            </LinearLayout>
            <!-- Reset button layout -->
            <Button
                style="@style/resetButtonStyle"
                android:background="@drawable/circle_reset_got"
                android:id="@+id/reset_button1"
                android:textColor="@color/submit_got_color"
                android:fontFamily="@font/game_of_thrones"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>